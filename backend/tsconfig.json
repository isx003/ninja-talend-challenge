{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "lib": ["es2015"],
    "include": [
        "src/**/*.ts",
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}